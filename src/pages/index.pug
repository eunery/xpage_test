extends common/layout

mixin post(img, link, text, date, ...tags)
    a.post(href=link)
        div.post_img
            img(src="/img/content/"+img+""  alt="")
        div.post_info
            div.tag-date
                each tag in tags
                    p.tags-list_tag.post_tag-text= tag
                span.tag-date_date.post_date-text #{date}
            div.post_text.post_fat-text
                p #{text}
        div.post_link


block content
    main.main
        div.container
            div.headline
                h1.headline_page-text Все новости
            div.rubric
                a(href="/").rubric_small-text Главная
                a(href="/").rubric_small-text Новости
            div.filters
                div.date
                    input.date_date-picker.input_style
                div.topic
                    select.select.input_style(placeholder="Выбрать рубрику")
                        option(selected disabled) Выбрать рубрику
                        option(disabled) Медицина
                        option Общество
                        option Коммуналка
                        option Политика
                        option Спорт
                        option Вектор развития
                        option Медицина
                        option Общество
                        option Коммуналка
                        option Политика
                        option Спорт
                        option Вектор развития
            div.post-list
                +post("fridge.png", "/", "Благодаря поддержке предпринимателей. Златоустовские поликлиники оснастили холодильными установками для хранения вакцины","02/02/2021", "Медицина", "Общество")
                +post("hospital.png", "/", "Госпитальная база закрыта, учреждение вернётся в «доковидный» режим после дезинфекции.  Роддом Златоуста вновь откроет свои двери 8 февраля", "29/01/2021", "Медицина")
